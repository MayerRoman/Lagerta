<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:c="http://www.springframework.org/schema/c"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/util
        http://www.springframework.org/schema/util/spring-util.xsd">

    <context:annotation-config/>

    <context:property-placeholder properties-ref="shared-properties"/>

    <util:properties id="shared-properties">
        <prop key="configBasePath">/com/epam/lathgertha/integration/</prop>
    </util:properties>

    <util:properties id="main-consumer-properties" location="${configBasePath}main-consumer.properties"/>
    <util:properties id="main-producer-properties" location="${configBasePath}main-producer.properties"/>
    <util:properties id="reader-consumer-properties" location="${configBasePath}reader-consumer.properties"/>
    <util:properties id="reader-producer-properties" location="${configBasePath}reader-producer.properties"/>

    <bean id="baseIgnite.cfg" class="org.apache.ignite.configuration.IgniteConfiguration"
          p:gridName="#{T(java.util.UUID).randomUUID().toString()}"
          p:cacheConfiguration-ref="caches"
          p:discoverySpi-ref="discovery-spi"
          p:serviceConfiguration-ref="services"/>

    <bean id="lead" class="com.epam.lathgertha.services.LeadServiceImpl"/>
    <bean id="reader" class="com.epam.lathgertha.services.ReaderServiceImpl"/>
    <util:list id="services">
        <bean class="org.apache.ignite.services.ServiceConfiguration"
              p:name="#{T(com.epam.lathgertha.services.LeadService).NAME}"
              p:maxPerNodeCount="1"
              p:totalCount="1"
              p:service-ref="lead"/>
        <bean class="org.apache.ignite.services.ServiceConfiguration"
              p:name="#{T(com.epam.lathgertha.services.ReaderService).NAME}"
              p:maxPerNodeCount="1"
              p:totalCount="3"
              p:service-ref="reader"/>
    </util:list>

    <util:list id="caches">
        <ref bean="cache"/>
    </util:list>

    <bean name="discovery-spi" class="org.apache.ignite.spi.discovery.tcp.TcpDiscoverySpi">
        <property name="ipFinder">
            <bean class="org.apache.ignite.spi.discovery.tcp.ipfinder.vm.TcpDiscoveryVmIpFinder">
                <property name="addresses">
                    <list>
                        <value>127.0.0.1:47500..47509</value>
                    </list>
                </property>
            </bean>
        </property>
    </bean>

    <bean name="main-subscriber-config" class="com.epam.lathgertha.kafka.SubscriberConfig"
          p:remoteTopic="remoteTopic"
          p:consumerConfig-ref="main-consumer-properties"
          p:producerConfig-ref="main-producer-properties"/>

    <bean name="reader-subscriber-config" class="com.epam.lathgertha.kafka.SubscriberConfig"
          p:remoteTopic="remoteTopic"
          p:consumerConfig-ref="reader-consumer-properties"
          p:producerConfig-ref="reader-producer-properties"/>

    <bean name="id-sequencer" class="com.epam.lathgertha.mocks.InMemoryIdSequencer"/>

    <bean name="key-transformer" class="com.epam.lathgertha.capturer.DefaultKeyTransformer"/>
    <bean name="value-transformer" class="com.epam.lathgertha.capturer.DefaultValueTransformer"/>
    <bean name="serializer" class="com.epam.lathgertha.util.SerializerImpl"/>

    <bean name="jdbc-committer" class="com.epam.lathgertha.base.jdbc.committer.JDBCCommitter"/>

    <bean id="kafka-log-committer" class="com.epam.lathgertha.kafka.KafkaLogCommitter"
          c:kafkaFactory-ref="kafka-factory"
          c:subscriberConfig-ref="subscriber-config"/>

    <bean name="commit-servitor" class="com.epam.lathgertha.subscriber.CommitServitor"
          c:serializer-ref="serializer"
          c:committer-ref="jdbc-committer"
          c:kafkaLogCommitter-ref="kafka-log-committer"/>

    <bean name="commit-strategy" class="com.epam.lathgertha.subscriber.SequentialCommitStrategy"
          c:commitServitor-ref="commit-servitor"/>

    <bean name="kafka-factory" class="com.epam.lathgertha.kafka.KafkaFactoryImpl"/>

    <util:list id="subscriber-configs">
        <ref bean="subscriber-config"/>
    </util:list>

    <bean name="producers-manager" class="com.epam.lathgertha.kafka.ProducersManager"
          c:kafkaFactory-ref="kafka-factory"
          c:keyTransformer-ref="key-transformer"
          c:valueTransformer-ref="value-transformer"
          c:configs-ref="subscriber-configs"
          c:serializer-ref="serializer"/>

    <util:list id="key-value-listeners">
        <bean class="com.epam.lathgertha.capturer.SynchronousPublisher">
            <constructor-arg index="0" ref="producers-manager"/>
        </bean>
    </util:list>

    <bean name="cache-store-factory" class="com.epam.lathgertha.capturer.DataCapturerBusFactory"/>

    <!-- Caches configuration -->
    <bean id="cache" class="org.apache.ignite.configuration.CacheConfiguration"
          p:name="#{T(com.epam.lathgertha.base.jdbc.common.Person).PERSON_CACHE}"
          p:readThrough="true"
          p:writeThrough="true"
          p:cacheMode="PARTITIONED"
          p:atomicityMode="TRANSACTIONAL"
          p:backups="2"
          p:cacheStoreFactory-ref="cache-store-factory"/>
</beans>
