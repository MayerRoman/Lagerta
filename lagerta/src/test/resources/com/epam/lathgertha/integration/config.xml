<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:c="http://www.springframework.org/schema/c"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/util
        http://www.springframework.org/schema/util/spring-util.xsd">

    <context:annotation-config/>

    <context:property-placeholder properties-ref="shared-properties"/>

    <util:properties id="shared-properties">
        <prop key="configBasePath">/com/epam/lathgertha/integration/</prop>
    </util:properties>

    <util:properties id="consumer-properties" location="${configBasePath}consumer.properties"/>
    <util:properties id="producer-properties" location="${configBasePath}producer.properties"/>

    <bean id="ignite.cfg" class="org.apache.ignite.configuration.IgniteConfiguration"
          p:gridName="#{T(java.util.UUID).randomUUID().toString()}"
          p:cacheConfiguration-ref="caches"
          p:discoverySpi-ref="discovery-spi"
          p:serviceConfiguration-ref="services"/>

    <bean id="ignite-bean" class="org.apache.ignite.IgniteSpringBean"
          p:configuration-ref="ignite.cfg"/>

    <bean id="stateAssistant" class="com.epam.lathgertha.subscriber.lead.LeadStateAssistantImpl" scope="prototype"
          c:ignite-ref="ignite-bean"/>

    <bean id="lead" class="com.epam.lathgertha.subscriber.lead.LeadImpl" scope="prototype"
          c:stateAssistant-ref="stateAssistant"/>

    <bean id="lead-service" class="com.epam.lathgertha.services.LeadServiceImpl"/>
    <bean id="reader-service" class="com.epam.lathgertha.services.ReaderServiceImpl"/>
    <util:list id="services">
        <bean class="org.apache.ignite.services.ServiceConfiguration"
              p:name="#{T(com.epam.lathgertha.services.LeadService).NAME}"
              p:maxPerNodeCount="1"
              p:totalCount="1"
              p:service-ref="lead-service"/>
        <bean class="org.apache.ignite.services.ServiceConfiguration"
              p:name="#{T(com.epam.lathgertha.services.ReaderService).NAME}"
              p:maxPerNodeCount="1"
              p:service-ref="reader-service"/>
    </util:list>

    <util:list id="caches">
        <ref bean="cache"/>
        <ref bean="binary-cache"/>
        <ref bean="atomicCache"/>
    </util:list>

    <bean id="discovery-spi" class="org.apache.ignite.spi.discovery.tcp.TcpDiscoverySpi">
        <property name="ipFinder">
            <bean class="org.apache.ignite.spi.discovery.tcp.ipfinder.vm.TcpDiscoveryVmIpFinder">
                <property name="addresses">
                    <list>
                        <value>127.0.0.1:47500..47509</value>
                    </list>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="cache-loader" class="com.epam.lathgertha.BaseIntegrationTest"
          factory-method="personJDBCDataCapturerLoader"/>

    <bean id="subscriber-config" class="com.epam.lathgertha.kafka.PerTestSubscriberConfig"
          p:remoteTopic="remoteTopic"
          p:consumerConfig-ref="consumer-properties"
          p:producerConfig-ref="producer-properties"/>

    <bean id="id-sequencer" class="com.epam.lathgertha.kafka.PerTestKafkaIdSequencer" scope="prototype"
          c:topic="txIdTopic"
          c:kafkaFactory-ref="kafka-factory"
          c:subscriberConfig-ref="subscriber-config"/>

    <bean id="key-transformer" class="com.epam.lathgertha.capturer.DefaultKeyTransformer"/>
    <bean id="value-transformer" class="com.epam.lathgertha.capturer.DefaultValueTransformer"/>
    <bean id="serializer" class="com.epam.lathgertha.util.SerializerImpl"/>

    <bean id="committer" class="com.epam.lathgertha.BaseIntegrationTest"
          factory-method="personJDBCCommitter"/>

    <bean id="kafka-log-committer" class="com.epam.lathgertha.kafka.KafkaLogCommitter" scope="prototype">
        <constructor-arg index="0" ref="kafka-factory"/>
        <constructor-arg index="1">
            <bean class="com.epam.lathgertha.kafka.PerTestSubscriberConfig"
                  p:remoteTopic="local-index-topic"
                  p:consumerConfig-ref="consumer-properties"
                  p:producerConfig-ref="producer-properties"/>
        </constructor-arg>
    </bean>

    <bean id="kafka-factory" class="com.epam.lathgertha.kafka.KafkaFactoryImpl"/>

    <util:list id="subscriber-configs">
        <ref bean="subscriber-config"/>
    </util:list>

    <bean id="producers-manager" class="com.epam.lathgertha.kafka.ProducersManager" scope="prototype"
          c:kafkaFactory-ref="kafka-factory"
          c:keyTransformer-ref="key-transformer"
          c:valueTransformer-ref="value-transformer"
          c:configs-ref="subscriber-configs"
          c:serializer-ref="serializer"/>

    <util:list id="key-value-listeners" scope="prototype">
        <bean class="com.epam.lathgertha.capturer.SynchronousPublisher" scope="prototype">
            <constructor-arg index="0" ref="producers-manager"/>
        </bean>
    </util:list>

    <bean id="cache-store-factory" class="com.epam.lathgertha.capturer.DataCapturerBusFactory"/>

    <!-- Caches configuration -->
    <bean id="cache" class="org.apache.ignite.configuration.CacheConfiguration"
          p:name="#{T(com.epam.lathgertha.BaseIntegrationTest).CACHE_NAME}"
          p:readThrough="true"
          p:writeThrough="true"
          p:cacheMode="PARTITIONED"
          p:atomicityMode="TRANSACTIONAL"
          p:backups="2"
          p:cacheStoreFactory-ref="cache-store-factory"/>

    <bean id="binary-cache" class="org.apache.ignite.configuration.CacheConfiguration"
          p:name="#{T(com.epam.lathgertha.BaseIntegrationTest).BINARY_KEEPING_CACHE_NAME}"
          p:readThrough="true"
          p:writeThrough="true"
          p:cacheMode="PARTITIONED"
          p:atomicityMode="TRANSACTIONAL"
          p:backups="2"
          p:storeKeepBinary="true"
          p:cacheStoreFactory-ref="cache-store-factory"/>

    <bean id="atomicCache" class="com.epam.lathgertha.util.AtomicsHelper" factory-method="getConfig"/>
</beans>
